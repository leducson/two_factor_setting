<div class="container jumbotron">
  <%= form_for(:two_fa, url: confirm_password_two_factor_settings_path, method: :post, class: "form-horizontal form-label-left") do |f| %>
    <div class="col-md-12">
      <div class="form-group">
        <label>Current Password</label>
      </div>
      <div class="d-flex">
        <div class="form-group">
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="form-group">
          <input type="hidden" name="request_action" value="<%= params[:action]%>" />
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
